extends layout

block content

  h1= title
  -
    let results = [
      {
        "order_name": "Chicken",
        "order_quantity": "4",
        "order_price": 67
      },
      {
        "order_name": "Fish",
        "order_quantity": "5",
        "order_price": 60
      },
      {
        "order_name": "Prawns",
        "order_quantity": "1",
        "order_price": 70
      },                   
    ]
  div(class= "container-fluid")
    div(class = "row")
      each item,index in results
        div(class= "col-sm-2" , onclick=`buy(${index})`) #{item.order_name}
        div(class= "col-sm-2", onclick=`buy(${index})`) #{item.order_quantity}
        div(class= "col-sm-2", onclick=`buy(${index})`) #{item.order_price}

  script.
    function buy(itemNum){
      alert(`The purchased item is ${itemNum+1}`)
    }
